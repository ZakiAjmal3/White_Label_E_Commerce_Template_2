<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/productImg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/chair_img"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/heartImg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_heart_grey"
        android:layout_margin="5dp"
        android:padding="2dp"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/productNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chair"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_below="@id/productImg"
        android:textSize="16dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/productNameTxt">
    <TextView
        android:id="@+id/productPriceTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/productDiscountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/light_green"
        android:layout_toRightOf="@id/productPriceTxt"
        android:textSize="13dp"/>
    </RelativeLayout>
</RelativeLayout>